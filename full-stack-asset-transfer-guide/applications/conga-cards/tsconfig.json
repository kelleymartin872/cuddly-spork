{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedLocals": false,
        "noImplicitReturns": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
